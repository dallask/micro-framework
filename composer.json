{
    "name": "dallask/micro-framework",
    "description": "My own cool micro-framework",
    "type": "project",
    "require": {
        "php": ">=7.1.0",
        "ext-PDO": "^7.1",
        "aura/router": "^3.1",
        "monolog/monolog": "^1.23",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "robmorgan/phinx": "^0.10.6",
        "symfony/console": "^4.1",
        "twig/twig": "^2.4",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stratigility": "^3.0"
    },
    "license": "BSD",
    "config": {
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Dallas Kassel",
            "email": "dallask@mail.ru"
        }
    ],
    "require-dev": {
        "filp/whoops": "^2.2",
        "fzaninotto/faker": "^1.8",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/php-code-coverage": "^6.1",
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/",
            "Infrastructure\\": "src/Infrastructure/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serv": [
            "php -S 0.0.0.0:8088 -t public"
        ],
        "test": [
            "phpunit --colors=always"
        ],
        "phplint": [
            "php -l public",
            "php -l src"
        ],
        "phpcs": [
            "phpcs -p"
        ],
        "phpcbf": [
            "phpcbf"
        ],
        "phpmd": [
            "phpmd public,src text ./phpmd.xml.dist"
        ],
        "phpcpd": [
            "phpcpd public src"
        ],
        "phploc": [
           "phploc public src"
        ],
        "full-check": [
            "@phplint",
            "@phploc",
            "@phpcs",
            "@phpmd",
            "@phpcpd"
        ],
        "app": "php bin/app.php --ansi",
        "migration": "phinx --ansi",
        "development-enable": "ln -sr config/autoload/development.local.php.dist config/autoload/development.local.php",
        "development-disable": "rm config/autoload/development.local.php"
    }
}
