{
    "name": "dallask/micro-framework",
    "description": "My own cool micro-framework",
    "type": "project",
    "require": {
        "php": ">=7.1.0"
    },
    "license": "BSD",
    "authors": [
        {
            "name": "Dallas Kassel",
            "email": "dallask@mail.ru"
        }
    ],
    "require-dev": {
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^4.1",
        "phpunit/phpunit": "^7.4",
        "phpunit/php-code-coverage": "^6.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "phplint": [
            "php -l public",
            "php -l src"
        ],
        "phpcs": [
            "phpcs -p"
        ],
        "phpmd": [
            "phpmd public,src text ./phpmd.xml.dist"
        ],
        "phpcpd": [
            "phpcpd public src"
        ],
        "phploc": [
           "phploc public src"
        ],
        "full-check": [
            "@phplint",
            "@phploc",
            "@phpcs",
            "@phpmd",
            "@phpcpd"
        ]
    }
}
